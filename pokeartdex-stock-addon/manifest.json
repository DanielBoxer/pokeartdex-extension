{
    "manifest_version": 3,
    "name": "PokeArtDex Stock Addon",
    "version": "1.0.1",
    "description": "Add-on to the PokeArtDex extension that adds a Search In Stock button for supported sites. This lets you search for in stock Pokemon cards by artist.",
    "permissions": [
        "scripting"
    ],
    "host_permissions": [
        "https://facetofacegames.com/*",
        "https://store.401games.ca/*"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "type": "module"
    },
    "icons": {
        "512": "icon.svg"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "{584ef28a-3339-460d-b62e-9f5d77130bda}",
            "strict_min_version": "112.0"
        }
    }
}